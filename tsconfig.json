{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["jest","node","@types/jest","@types/node","@types/react","@types/react-dom","@types/react-test-renderer"],
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["next-env.d.ts", "**/*.ts","src/**/*.ts", "src/**/*.tsx", ".next/types/**/*.ts", "jest.config.js", "src/**/*.test.tsx", "src/**/*.test.ts", "babel.config.js"],
  "exclude": ["node_modules"]
}
